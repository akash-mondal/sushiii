{
  "name": "sushiii",
  "version": "0.1.0",
  "private": true,
  "description": "Policy-Aware Consent Ledger on Constellation Network",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "install": "pnpm install",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:api": "pnpm --filter @sushiii/api dev",
    "dev:app": "pnpm --filter @sushiii/app dev",
    "build": "pnpm -r build",
    "build:metagraph": "cd metagraph && sbt assembly",
    "build:api": "pnpm --filter @sushiii/api build",
    "build:app": "pnpm --filter @sushiii/app build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:metagraph": "cd metagraph && sbt test",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\" && cd metagraph && sbt scalafmtAll",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0"
}
